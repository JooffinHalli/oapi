{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OAPI Transpiler Configuration",
    "description": "Configuration schema for OAPI Transpiler",
    "type": "array",
    "items": {
        "type": "object",
        "required": ["src", "output"],
        "properties": {
            "src": {
                "type": "string",
                "description": "OpenAPI source (URL or file path)",
                "examples": [
                    "https://api.example.com/swagger.json",
                    "./openapi.json"
                ]
            },
            "output": {
                "type": "string",
                "description": "Output directory for generated TypeScript files",
                "examples": [
                    "./src/api",
                    "./src/types"
                ]
            },
            "hook": {
                "type": "string",
                "description": "Path to custom hook function",
                "examples": [
                    "./hooks.js",
                    "./hooks/service.js"
                ]
            },
            "filter": {
                "type": "string",
                "description": "Regular expression to filter paths",
                "pattern": ".*",
                "examples": [
                    "^(?!.*internal).*$",
                    "^/api/v1/.*$",
                    "^(?!.*(?:internal|private|admin)).*$"
                ]
            }
        },
        "additionalProperties": false
    }
}
